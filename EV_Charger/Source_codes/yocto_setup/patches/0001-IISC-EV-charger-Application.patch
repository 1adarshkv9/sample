+/*********************************************************************************************/
+int write_init(struct dbus_var_t *dbus)
+{
+
+   // initialise the errors
+   dbus_error_init(&(dbus->err));
+
+   // connect to the bus
+   dbus->conn = dbus_bus_get( DBUS_BUS_SESSION, &dbus->err );
