+            
+            can_frame[2] = (int )st->voltage;
+            can_frame_len += 1;
+            
+            can_frame[3] = (int )((st->voltage - ((int )st->voltage))*100);
+            can_frame_len += 1;
+        }
+        else if(strcmp(st->action, RESET) == 0)
+        {
+            can_frame[1] = (PORT_OFF << 4) | (can_frame[1]);
